<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="devrari.sandeep.ocrapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name=".ActivityOCR"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityCustomGallery"
            android:label="Gallery"
            android:parentActivityName=".ActivityOCR"
            android:theme="@style/CustomGalleryTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityOCR" />
        </activity>
        <activity
            android:name=".ActivityCustomGalleryFolderImages"
            android:label="Images"
            android:parentActivityName=".ActivityCustomGallery"
            android:theme="@style/CustomGalleryTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityCustomGallery" />
        </activity>
        <activity android:name=".ActivitySendTo"
            android:parentActivityName=".ActivityCustomGallery"
            android:theme="@style/CustomGalleryTheme"
            android:label="read as text">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityCustomGallery" /></activity>
    </application>

</manifest>