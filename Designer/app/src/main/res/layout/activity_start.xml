<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="devrari.sandeep.designer.ActivityStart"
    android:background="@drawable/designer_start_back">

    <Button
        android:id="@+id/getstarted"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@color/heloButtonBack"
        android:padding="20dp"
        android:text="@string/hello_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="109dp"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/hellotxt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello World"
        android:textColor="@color/helloTxtColor"
        android:textSize="40sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helloDesc"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="It is long establised fact that a reader will be directed by  the readable content of a page where looking at its layout."
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:textAlignment="center"
        android:lineSpacingExtra="10sp"
        />
</RelativeLayout>
